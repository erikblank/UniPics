<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.unipics">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_unipics"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ImageActivity.ImageActivity"></activity>
        <activity
            android:name=".Gallery.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainMenu.FolderActivity"
            android:label="@string/title_activity_folder"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Authentification.RegisterActivity" />
        <activity android:name=".Authentification.UserData" />
        <activity android:name=".Authentification.LogInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>