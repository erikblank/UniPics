<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainMenu.FolderActivity"
    tools:showIn="@layout/activity_folder"
    android:background="@drawable/bg_folder_activity">


    <GridView
        android:id="@+id/gv_folders"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:numColumns="auto_fit" />

    <TextView
        android:id="@+id/emptyElement_folder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/emptyTextFolder"
        android:textColor="@color/random_light"
        android:textSize="24sp"
        android:visibility="gone" />
</LinearLayout>